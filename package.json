{
  "name": "express-ts-template",
  "version": "1.0.0",
  "description": "ExpressJS Typescript Template",
  "main": "app.ts",
  "author": "Robert Devasia",
  "license": "MIT",
  "private": false,
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "controllers",
      "interface",
      "env",
      "models",
      "routes",
      "app.ts"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register app.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "dev": "nodemon",
    "generate": "node generate.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.12.0",
    "sequelize-typescript": "^2.1.1",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.4",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0"
  }
}
